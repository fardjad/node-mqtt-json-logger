{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["broker", "topics"],
  "additionalProperties": false,
  "properties": {
    "broker": {
      "$id": "#/properties/broker",
      "type": "object",
      "required": ["kafkaHost", "groupId"],
      "additionalProperties": false,
      "properties": {
        "kafkaHost": {
          "$id": "#/properties/broker/properties/kafkaHost",
          "type": "string",
          "examples": ["localhost:9092"],
          "pattern": "^(.*)$"
        },
        "groupId": {
          "$id": "#/properties/broker/properties/groupId",
          "type": "string",
          "examples": ["kafka-node"],
          "pattern": "^(.*)$"
        }
      }
    },
    "topics": {
      "$id": "#/properties/topics",
      "type": "array",
      "items": {
        "$id": "#/properties/topics/items",
        "type": "object",
        "required": ["topic", "path"],
        "additionalProperties": false,
        "properties": {
          "topic": {
            "$id": "#/properties/topics/items/properties/topic",
            "type": "string",
            "examples": ["topic1"],
            "pattern": "^(.*)$"
          },
          "path": {
            "$id": "#/properties/topics/items/properties/path",
            "type": "string",
            "examples": ["topic1.log"],
            "pattern": "^(.*)$"
          },
          "size": {
            "$id": "#/properties/topics/items/properties/size",
            "type": "string",
            "examples": ["1G"],
            "pattern": "^\\d+(B|K|M|G)$"
          },
          "interval": {
            "$id": "#/properties/topics/items/properties/interval",
            "type": "string",
            "examples": ["1d"],
            "pattern": "^\\d+(s|m|h|d|M)$"
          },
          "maxFiles": {
            "$id": "#/properties/topics/items/properties/maxFiles",
            "type": "integer",
            "examples": [14]
          },
          "compress": {
            "$id": "#/properties/topics/items/properties/compress",
            "type": "string",
            "examples": ["gzip"],
            "pattern": "^gzip$"
          }
        }
      }
    }
  }
}
